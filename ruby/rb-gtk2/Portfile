# $Id: $

PortSystem		1.0
PortGroup		ruby 1.0

ruby.setup		{gtk2 ruby-gnome2} 0.17.0 extconf.rb \
				{ gtk/README gtk/sample gdkpixbuf/sample } \
				sourceforge:ruby-gnome2
revision		0
maintainers		kimuraw@macports.org
platforms		darwin
description		Ruby/GTK2 is a Ruby binding of GTK+-2.0.x. \
				Ruby/GdkPixbuf2 is a Ruby binding of GdkPixbuf-2.x.
long_description	Ruby/GTK2 is a Ruby binding of GTK+-2.0.x. \
				Ruby/GdkPixbuf2 is a Ruby binding of GdkPixbuf-2.x.
categories-append	gnome
checksums		md5 cc54338888c487055670ee2898391caf \
				rmd160 11bd9fa5b54a822c58851b9e69b3837a0e0a5926 \
				sha1 8afcaedaa3fc5c4b2e86152a4122c28ad4693c07
# generate glib-enum-types.h at glib/src and glib/pango
pre-configure	{
	cd ${worksrcpath}
	system "${ruby.bin} extconf.rb --strict glib pango"
}
configure.env	RUBYOPT=-rvendor-specific
configure.args	--strict gtk gdkpixbuf
depends_lib-append	port:gtk2 port:rb-pango port:rb-rcairo port:rb-glib2
distname		${ruby.project}-all-${version}

patchfiles		patch-gtk-test-run-test.rb
# Run Test for developer only, the test launches X11.app
#test.run		yes
test.cmd		${ruby.bin}
test.dir		${worksrcpath}/gtk
test.target		test/run-test.rb

#[hack] tell macports system this version is later than 0.17.0-rc1
version			0.17.0.rel
